@model IEnumerable<ToDoAPP.Models.MyTask>
    @{
    ViewBag.Title="Index";
    }

    <div class="card">
        <div class="card-header">
            <div class="card-title">
                <h4 class="m-0 p-0 float-left" data-toggle="modal" data-target="#exampleModal">Today : @DateTime.Now.ToString("dd-MMM-yyyy")</h4>  <a href="@Url.Action("Create","Home")" type="button" style="border-radius:50%;" class="btn btn-primary float-right">+</a>
            </div>
        </div>
        <div class="card-body">
            @foreach (var item in Model)
            {
            <div class="card mt-1">
                <div class="cat-title">
                    @Html.DisplayFor(modelItem => item.Category.Name)
                    <div class="button-group float-right">

                        @if (item.IsPending == true)
                        {
                          <a href="@Url.Action("Edit","Home", new {Id = @item.Id })" title="Edit" class="mr-2 text-info">&crarr;</a>
                            <a href="#" id="@item.Id" class="mr-2 text-info done"> &#10003;</a>
                            <a href="#" id="@item.Id" class="mr-2 text-info delbtn" title="Delete">&times;</a>
                        }
                        else
                        {
                            <span>&cong;</span>
                        }


                    </div>
                </div>
                <div class="task-title pl-4">
                    @Html.DisplayFor(modelItem => item.TaskName)
                </div>
                <pre class="pl-4">
                    @item.Description
                </pre>
            </div>
            }
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form action="/Home/MyTaskOn" method="Post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Pick a Date</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type ="date" id="date" name="date" class="form-control mx-auto mt-0 mb-5" required />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Show Task List</button>
                </div>
                </form>
            </div>
        </div>
    </div>



